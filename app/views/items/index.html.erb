<div class="container">
  <% cache cache_key_for(Item, "count") do %>
    <div class="row">
      <div class="col-sm-12">
        <h1><%= @items.count %> Items</h1>
      </div>
  </div>
  <div class="row"></div>
  <!-- can also use cache("items-list") to do the same thing-->
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
  <% end %>
  <% end %>
</div>

