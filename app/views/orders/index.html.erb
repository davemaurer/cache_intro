<div class="container">
  <!-- another approach to cache is using cache("items-list", expires_in: 15.minutes) do
  , or expires_in: 30) do if you want seconds-->
  <% cache("orders-list-#{Order.count}-#{Order.maximum(:updated_at)}") do %>
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @orders.count %> Orders</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @orders.each do |order| %>
    <div class="col-sm-12">
      <h2>Order <%= order.id %></h2>
      <h5>Client: <%= order.user.name %></h5>
      <h5>Order Items</h5>
      <% order.items.each_with_index do |item, index| %>
        <p>
          <%= "#{index + 1}. #{item.name}" %>
        </p>
      <% end %>
    </div>
  <% end %>
  <% end %>
</div>

